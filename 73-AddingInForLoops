import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Number:");
        int max = in.nextInt();
        int total = 0;
        for (int i = 1; i <= max; i++){
            System.out.print(i + " ");
            total += i;
        }
        System.out.print("\nThe total is: " + total);
    }
}
